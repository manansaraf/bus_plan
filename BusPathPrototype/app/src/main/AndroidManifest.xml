<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidtoh.helloworld" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NearbyStops"
            android:label="Nearby Bus Stops"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
        <activity
            android:name=".FavoriteStops"
            android:label="Favorites"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
        <activity
            android:name=".SearchStops"
            android:label="Search"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".BusStopStatistics"
            android:label="Stop Statistics"
            android:parentActivityName=".FavoriteStops">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
        <activity
            android:name=".Scheduler"
            android:label="Scheduler"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
        <activity
            android:name=".SchedulerAddReminder"
            android:label="Add Reminder"
            android:parentActivityName=".Scheduler">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
        <activity
            android:name=".TripPlanner"
            android:label="Trip Planner"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity" />
        </activity>
    </application>

</manifest>
