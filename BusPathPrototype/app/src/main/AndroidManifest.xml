<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.davidtoh.helloworld">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".core_activities.NearbyBusStopsActivity"
            android:label="Nearby Bus Stops"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <activity
            android:name=".core_activities.FavoriteStopsActivity"
            android:label="Favorites"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <activity
            android:name=".core_activities.SearchStopsActivity"
            android:label="Search"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".core_activities.BusStopStatisticsActivity"
            android:label="Stop Statistics"
            android:parentActivityName=".core_activities.FavoriteStopsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <activity
            android:name=".core_activities.SchedulerActivity"
            android:label="Scheduler"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <activity
            android:name=".core_activities.SchedulerManageActivity"
            android:label="Add Reminder"
            android:parentActivityName=".core_activities.SchedulerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <activity
            android:name=".core_activities.TripPlannerActivity"
            android:label="Trip Planner"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.MainActivity"/>
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:parentActivityName=".core_activities.TripPlannerActivity"
            android:name=".core_activities.TripPlannerResultActivity"
            android:label="Trip Planner">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.core_activities.TripPlannerActivity"/>
        </activity>
        <activity
            android:parentActivityName=".core_activities.TripPlannerActivity"
            android:name=".core_activities.SearchStopsTripPlannerActivity"
            android:label="Search">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.davidtoh.helloworld.core_activities.TripPlannerActivity"/>
        </activity>
    </application>

</manifest>
